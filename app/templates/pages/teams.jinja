{#=====================================================
  Things page
  - List of things passed in as 'things' array
  - Form for adding a new thing
=====================================================#}

{% extends 'pages/base.jinja' %}


{% block title %}

    Teams

{% endblock %}


{% block content %}

    <h1>Teams</h1>
        
    {% for team in teams %}

        <article>
            <a href="/team/{{ team.code }}">
            <h1><strong>{{ team.name }}</strong></h1> </a>
            <h4>{{team.code}}</h4>
            <p>{{team.description}}</p>
            <a href="{{team.website}}">{{team.website}}</a>
        </article>

    {% endfor %}
        

    


    {# Only show form if user is logged in #}
    {% if session.user_id %}

        <article>

            <h3>Add a New Thing...</h3>

            <form action="/add" method="POST">

                <input
                    type="text"
                    name="name"
                    placeholder="Name of new thing"
                    required
                >

                <input
                    type="number"
                    name="price"
                    min="0"
                    placeholder="Price in dollars"
                    required
                >

                <button>Add the Thing</button>

            </form>

        </article>

    {% endif %}

{% endblock %}

